<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

	<!-- Data Sources -->
	<data-sources>
	</data-sources>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="localloginActionForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="userid" type="java.lang.String">
			</form-property>
			<form-property name="fromCntryCd" type="java.lang.String">
			</form-property>
			<form-property name="language" type="java.lang.String">
			</form-property>
			<form-property name="serialize" type="java.lang.String">
			</form-property>
		</form-bean>
	</form-beans>

	<!-- Global Exceptions -->
	<global-exceptions>
		<exception type="java.lang.Exception"
						path="EmdcsGlobalErrorPage.jsp" key="genericException.message">
		</exception>
	</global-exceptions>

	<!-- Global Forwards -->
	<global-forwards>
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>
        <action path="/sysinfo" type="com.mazda.technician.patsiltcrs.action.SystemDisplayInfoAction">
			<forward name="success" path="/SystemInfo.jsp">
			</forward>
			<forward name="failure" path="/failure.jsp">
			</forward>
            <forward name="default" path="/sysinfo.do"/>
		</action>
		<action path="/localloginaction" type="com.mazdausa.common.application.actions.LocalLoginAction" name="localloginActionForm" input="/defaultlogin.jsp" className="com.mazdausa.common.application.actions.EMDCSLocalLoginActionMapping">
			<set-property property="localLoginAction" value="true"/>
			<forward name="locallogin" path="/defaultlogin.jsp">
			</forward>
			<forward name="loggedIn" path="/PatsILTCourseUser.do">
			</forward>
            <forward name="default" path="/localloginaction.do"/>
		</action> 

       <action path="/wslloginaction" type="com.mazdausa.common.application.actions.LocalLoginAction" name="localloginActionForm" input="/defaultlogin.jsp" className="com.mazdausa.common.application.actions.EMDCSLocalLoginActionMapping">
			<set-property property="localLoginAction" value="true"/>
			<forward name="locallogin" path="/defaultlogin.jsp">
			</forward>
			<forward name="loggedIn" path="/PatsILTCourseUser.do">
			</forward>
            <forward name="default" path="/localloginaction.do"/>
		</action> 

		<action path="/PatsILTCourseUser" type="com.mazda.technician.patsiltcrs.action.PatsILTCourseUserList"> 
			<forward name="success" path="/QuestExcellenceSales.jsp">
			</forward>
            <forward name="failure" path="/failure.jsp">
			</forward>
            <forward name="default" path="/PatsILTCourseUser.do"/>
 		</action>
	</action-mappings>
	<controller processorClass="com.mazdausa.common.application.actions.EMDCSRequestProcessor" multipartClass="org.apache.struts.upload.CommonsMultipartRequestHandler">
	</controller>

	<!-- Message Resources -->
	<message-resources parameter="com.mazdausa.application.resources.ApplicationResources"/>
	<plug-in className="com.mazdausa.common.application.actions.EMDCSFrameworkCommandLoaderPlugIn">
		<set-property property="commandConfig" value="/WEB-INF/emdcs-commands-config.properties"/>
	</plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,
                                              /WEB-INF/validation.xml"/>
    </plug-in>

    <plug-in className="com.mazda.technician.patsiltcrs.action.ApplicationInitializerPlugin">

    </plug-in>

</struts-config>
