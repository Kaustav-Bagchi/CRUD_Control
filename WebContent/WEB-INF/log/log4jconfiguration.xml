<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false" threshold="info">

<appender name="SharedConsole" class="com.mazdausa.common.log.MazdaCustomConsoleAppender">
    <param name="Threshold" value="info"/>
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d [%X{APP_NAME}] %C [%-5p] - %m%n"/>
    </layout>
</appender>


<appender name="EMDCS_App" class="com.mazdausa.common.log.MazdaCustomRollingFileAppender">
    <param name="file" value="${LOG_DIR}/emdcsapps/emdcsapp.log"/>
    <param name="Threshold" value="info"/>
    <param name="Append" value="true"/>    
    <param name="MaxFileSize" value="10MB"/>
    <param name="maxBackupIndex" value="2"/> 
    <layout class="org.apache.log4j.PatternLayout">
       <param name="ConversionPattern" value="%d [%X{APP_NAME}] %C [%-5p]  - %m%n"/>
    </layout>
</appender>

<logger name="com.mazdausa" additivity="false">
    <level value="info"/>
    <appender-ref ref="SharedConsole"/>
    <appender-ref ref="EMDCS_App"/> 
</logger>

<root>
   <level value="info"/>
   <appender-ref ref="SharedConsole"/>
</root>

</log4j:configuration>

